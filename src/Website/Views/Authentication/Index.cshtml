@model Website.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="container d-flex">
   <div class="m-auto bg-dark">
      <h1>Please login below</h1>

      <form method="post" asp-controller="authentication" asp-action="login">
         <div class="form-group">
            <label asp-for="Username" class="col-form-label"></label>
            <input asp-for="Username" value="@Model.Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
         </div>

         <div class="form-group">
            <label asp-for="Password" class="col-form-label"></label>
            <input asp-for="Password" value="" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
         </div>

         <label asp-for="RememberMe" class="custom-control custom-checkbox">
            <input asp-for="RememberMe" type="checkbox" class="custom-control-input" />
            <span class="custom-control-label text-light">Remember me on this computer</span>
         </label>

         <input type="submit" class="btn btn-login btn-block" value="Login" />
         @Html.AntiForgeryToken()
      </form>
   </div>
</div>

